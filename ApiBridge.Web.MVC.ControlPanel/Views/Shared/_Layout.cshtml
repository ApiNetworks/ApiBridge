<script src="@Url.Content("~/Content/themes/adminia/js/excanvas.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/themes/adminia/js/bootstrap.js")" type="text/javascript"></script>
  </body>
</html>
