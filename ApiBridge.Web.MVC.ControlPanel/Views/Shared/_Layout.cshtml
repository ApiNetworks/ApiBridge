<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">    
    <link href="@Url.Content("~/Content/themes/adminia/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/adminia/css/bootstrap-responsive.min.css")" rel="stylesheet" />
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/adminia/css/font-awesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/adminia/css/adminia.css")" rel="stylesheet" /> 
    <link href="@Url.Content("~/Content/themes/adminia/css/adminia-responsive.css")" rel="stylesheet" /> 
    <link href="@Url.Content("~/Content/themes/adminia/css/pages/dashboard.css")" rel="stylesheet" /> 
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
<body>
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> 
				<span class="icon-bar"></span> 
				<span class="icon-bar"></span> 
				<span class="icon-bar"></span> 				
			</a>
			
			<a class="brand" href="/">Domain Control Panel</a>
			<div class="nav-collapse">
				<ul class="nav pull-right">
					<li>
						<a href="#"><span class="badge badge-warning">7</span></a>
					</li>
					<li class="divider-vertical"></li>
                    @if (User.Identity.IsAuthenticated)
                    {
					<li class="dropdown">
						<a data-toggle="dropdown" class="dropdown-toggle " href="#">
							Account<b class="caret"></b>							
						</a>
						<ul class="dropdown-menu">
                            <li>
								<a href="usermanagement"><i class="icon-user"></i> User Management  </a>
							</li>
                            <li>
								<a href="usermanagement/log"><i class="icon-user"></i> Log Management  </a>
							</li>
							<li>
								<a href="./account.html"><i class="icon-user"></i> Account Setting  </a>
							</li>
							<li>
								<a href="./change_password.html"><i class="icon-lock"></i> Change Password</a>
							</li>
							<li class="divider"></li>
							<li>
								<a href="/account/logoff"><i class="icon-off"></i> Logout</a>
							</li>
						</ul>
					</li>
                    }
                    else
                    {
					<li class="dropdown">
						<a href="/account/logon">
							Log In					
						</a>
					</li>                        
                    }
				</ul>
			</div> <!-- /nav-collapse -->
		</div> <!-- /container -->
	</div> <!-- /navbar-inner -->
</div> <!-- /navbar -->

<div id="content">
	<div class="container">
		
		<div class="row">
			
			<div class="span3">
				
				<div class="account-container">
				
					<div class="account-avatar">

						<img src="http://apibridgecloud.blob.core.windows.net/domain/screenshot/yahoo-com-small.jpg" alt=""  />
                        <a href="http://www.MyDomainName.com" target="_blank">MyDomainName.com</a></span>
						
				<div>			<span class="label label-important">Unverified</span></div>
                        
					</div> <!-- /account-avatar -->
				
					<div class="account-details">
		
						
						<span class="account-actions">
							
						</span>
					
					</div> <!-- /account-details -->
                    			

				
				</div> <!-- /account-container -->
                <span class="account-name">
				<br />
				
				<ul id="main-nav" class="nav nav-tabs nav-stacked">
					
					<li class="active">
						<a href="/">
							<i class="icon-home"></i>
							Dashboard 		
						</a>
					</li>
					
					<li>
						<a href="/verify">
							<i class="icon-pushpin"></i>
							Verify Domain	
						</a>
					</li>
					
					
					<li>
						<a href="/widgets">
							<i class="icon-th-large"></i>
							My Widgets
						</a>
					</li>
					
					<li>
						<a href="/reports">
							<i class="icon-signal"></i>
							My Reports	
						</a>
					</li>
					
					<li>
						<a href="/comments">
							<i class="icon-user"></i>
							My Comments							
						</a>
					</li>
                    <li>
						<a href="/contracts">
							<i class="icon-list-alt"></i>
							My Contracts							
						</a>
					</li>
				</ul>	
				<hr />

				<div class="sidebar-extra">
				</div> <!-- .sidebar-extra -->
				<br />
			</div> <!-- /span3 -->
			<div class="span9">
				
				@RenderBody()
				
			</div>
		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /content -->
					
	
<div id="footer">
	<div class="container">				
		<hr>
		<p>&copy; 2012 ApiBridge Media Inc.</p>
	</div> <!-- /container -->
</div> <!-- /footer -->


    

